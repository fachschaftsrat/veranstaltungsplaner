GET	/webjars/*file				controllers.WebJarAssets.at(file)
GET	/assets/*file				controllers.Assets.at(path="/public", file)

GET	/					controllers.Application.index()

GET	/register				controllers.Users.register()
POST	/register				controllers.Users.register()
GET	/activation/:name/:secret		controllers.Users.activate(name, secret)
POST	/login					controllers.Users.login()
GET	/logout					controllers.Users.logout()
GET	/profile/:id				controllers.Users.profile(id)
POST	/profile/:id				controllers.Users.profile(id)
GET	/allusers				controllers.Users.allusers()
POST	/openid/login				controllers.Users.openidlogin()
GET	/openid/callback			controllers.Users.openidcallback()

GET	/events					controllers.Events.events()
GET	/addevent				controllers.Events.addevent()
POST	/addevent				controllers.Events.addevent()
GET	/event/:id				controllers.Events.showevent(id)
GET	/event/:id/edit				controllers.Events.editevent(id)
POST	/event/:id/edit				controllers.Events.editevent(id)
GET	/event/:id/signup			controllers.Events.signup(id)
GET	/event/:id/signoff			controllers.Events.signoff(id)
GET	/event/:id/toggleopen			controllers.Events.toggleOpen(id)
GET	/event/:eid/removeparticipant/:uid	controllers.Events.removeParticipant(eid, uid)
